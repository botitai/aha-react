{
  "include": ["src/**/*"],
  "exclude": ["src/index.js", "src/components/Calender/v2/**/*"],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "removeComments": true,
    "allowJs": true,
    "emitDeclarationOnly": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "listFiles": true,
    "declaration": true,
    "outFile": "types/index.d.ts"
  }
}
